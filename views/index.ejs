<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Transcription</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Inline CSS for simplicity */
        #transcribeOutput {
            white-space: pre-wrap; /* Preserves whitespace and line breaks */
            border: 1px solid #ddd;
            padding: 10px;
            background-color: #f9f9f9;
            font-family: monospace;
            overflow-x: auto; /* Allows horizontal scrolling if needed */
        }
        .logout-button {
            background-color: #f44336; /* Red background */
            color: white; /* White text */
            border: none; /* No border */
            padding: 10px 20px; /* Padding */
            text-align: center; /* Centered text */
            text-decoration: none; /* No underline */
            display: inline-block; /* Inline block */
            font-size: 16px; /* Font size */
            cursor: pointer; /* Pointer cursor on hover */
            margin-top: 20px; /* Top margin */
        }
        .logout-button:hover {
            background-color: #d32f2f; /* Darker red on hover */
        }
        /* Progress bar styles */
        #progressBar {
            width: 100%;
            background-color: #f3f3f3;
            margin-top: 20px;
            display: none; /* Hide progress bar initially */
        }
        #progressBar div {
            width: 0%;
            height: 30px;
            background-color: #4caf50;
            text-align: center;
            line-height: 30px;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Upload Video for Transcription</h1>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <input type="file" name="video" accept="video/*" required>
            <button type="submit">Upload and Transcribe</button>
        </form>

        <h1>Transcribe from URL</h1>
        <form id="transcribeForm">
            <input type="text" id="urlInput" placeholder="Enter text here" required>
            <button type="button" id="transcribeButton">Transcribe</button>
        </form>

        <!-- Progress bar for transcoding -->
        <div id="progressBar">
            <div>0%</</div>
        </div>

        <div id="transcribeOutput"></div>
        
        <form action="/history" method="GET">
            <button type="submit">History</button>
        </form>

        <!-- Logout Button -->
        <form action="/logout" method="GET">
            <button type="submit" class="logout-button">Logout</button>
        </form>
    </div>

    <script>
        document.getElementById('transcribeButton').addEventListener('click', async function() {
            const text = document.getElementById('urlInput').value;
            const progressBar = document.getElementById('progressBar');
            const progressText = progressBar.querySelector('div');
            progressBar.style.display = 'block'; // Show the progress bar
            progressText.style.width = '0%';
            progressText.textContent = '0%';

            if (text) {
                const response = await fetch('/transcribe_url', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ text: text })
                });

                if (response.ok) {
                    // Polling for progress update
                    const reader = response.body.getReader();
                    let receivedLength = 0;
                    const contentLength = +response.headers.get('Content-Length') || 100;

                    while (true) {
                        const { done, value } = await reader.read();
                        if (done) break;

                        receivedLength += value.length;
                        const percentComplete = Math.round((receivedLength / contentLength) * 100);
                        progressText.style.width = `${percentComplete}%`;
                        progressText.textContent = `${percentComplete}%`;

                        // Display the result when done
                        if (percentComplete === 100) {
                            progressBar.style.display = 'none'; // Hide the progress bar when complete
                            const data = await new TextDecoder('utf-8').decode(value);
                            document.getElementById('transcribeOutput').textContent = data;
                        }
                    }
                } else {
                    document.getElementById('transcribeOutput').textContent = 'Transcription failed.';
                }
            }
        });
    </script>
</body>
</html>
